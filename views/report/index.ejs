<%- include('../include/head.ejs')%>
<style>
  table {
    margin: 50px auto;
  }
  table, th, td {
    border: 1px solid black;
    border-collapse: separate;
  }
  th,td {
    border: 1px solid black;
    padding: 15px;
    text-align: center;
  }
</style>
</head>

<body class="index-page">
<%- include('../include/header.ejs')%>
  </header>

  <main class="main">
      <table>
        <thead>
          <tr>
            <th>تنظیمات</th>
            <th>توضیحات</th>
            <th>نوعیت کالا</th>
            <th>قیمت</th>
            <th>نام</th>
        </tr>
        </thead>
        
            <% for(p of products){
              
              %>
              <tbody>
                <tr>
              <td>
                <a href="/edit/<%= p.id%>">ویرایش</a>
                <form action="delete" method="POST">
                  <input type="hidden" name="IdP" id="" value="<%= p.id%>">
                  <button type="submit">حذف</button>
                </form>
              </td>
              <td> <%= p.description%> </td>
              <% for(t of typeProduct){
                if(t.id == p.typeId){
                  %>
              <td><%= t.type%></td>
                  <%}} %>
              <td><%= p.price%></td>
              <td><%= p.name%></td>
            </tr>
          </tbody>
              <%
            } %>
          
      </table>
    
  </main>

  
  <%- include('../include/end.ejs')%>